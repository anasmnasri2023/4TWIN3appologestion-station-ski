pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh 'mvn clean install -DskipTests' 
                }
            }
        }

        stage('Unit Test') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }

        stage('Build application') {
            steps {
                script {
                    sh 'mvn package -DskipTests'
                }
            }
        }
    }
}
