pipeline {
    agent any

    tools {
        // Configure these tool names in Jenkins Global Tool Configuration
        maven 'M3'          // Maven installation
        jdk 'jdk17'        // Java JDK (adjust version as needed)
    }

    environment {
        // Optional: Set these if you need specific versions
        JAVA_HOME = "${tool 'jdk17'}"
        MAVEN_HOME = "${tool 'M3'}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'ghassen', 
                     url: 'https://github.com/anasmnasri2023/4TWIN3appologestion-station-ski.git',
                     credentialsId: '' // Add credentials ID if needed
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml' // Archive test results
                }
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package -DskipTests' // Skip tests if they were already run
            }
            post {
                success {
                    archiveArtifacts 'target/*.jar' // Save the built package
                }
            }
        }
    }

    post {
        always {
            cleanWs() // Clean up workspace when done
        }
        success {
            echo '✅ Pipeline succeeded!'
        }
        failure {
            echo '❌ Pipeline failed! Check logs for details.'
            // Optional: Send notification (email, Slack, etc.)
        }
    }
}
