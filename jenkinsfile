pipeline {
    agent any

    environment {
        MAVEN_HOME = '/opt/maven' // Adjust if Maven is installed elsewhere
    }

    stages {

        stage('Git Checkout') {
            steps {
                git branch: 'ghassen', url: 'https://github.com/anasmnasri2023/4TWIN3appologestion-station-ski.git'
            }
        }

        stage('Maven Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package Application') {
            steps {
                sh 'mvn package'
            }
        }

    }

    post {
        success {
            echo '✅ Build and tests completed successfully.'
        }
        failure {
            echo '❌ Pipeline failed. Check logs for details.'
        }
    }
}

