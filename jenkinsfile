pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm  // Explicit checkout step
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    // This will run both unit tests and build the package
                    sh 'mvn clean package'
                }
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'  // Archive test results
                }
            }
        }

        stage('Install') {
            steps {
                script {
                    // Only needed if you want to install to local repo
                    sh 'mvn install -DskipTests'
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
