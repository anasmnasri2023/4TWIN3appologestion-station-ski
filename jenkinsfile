pipeline {
    agent any

    tools {
        // Make sure these names match Jenkins Global Tool Configuration
        maven 'M3'       // Maven tool name in Jenkins
        jdk 'jdk17'      // JDK tool name in Jenkins
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'ghassen', 
                     url: 'https://github.com/anasmnasri2023/4TWIN3appologestion-station-ski.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
            post {
                success {
                    archiveArtifacts 'target/*.jar'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo '✅ Pipeline succeeded!'
        }
        failure {
            echo '❌ Pipeline failed! Check logs for details.'
        }
    }
}
