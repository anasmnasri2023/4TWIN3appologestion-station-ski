pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    // For Maven
                    sh 'mvn clean install -DskipTests'
                    
                    // If you're using Gradle instead, replace with:
                    // sh './gradlew build -x test'
                }
            }
        }

        stage('Unit Test') {
            steps {
                script {
                    sh 'mvn test'
                    
                    // For Gradle:
                    // sh './gradlew test'
                }
            }
        }

        stage('Build application') {
            steps {
                script {
                    sh 'mvn package -DskipTests'
                    
                    // For Gradle:
                    // sh './gradlew build -x test'
                }
            }
        }
    }
}
